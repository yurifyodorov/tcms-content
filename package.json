{
  "name": "tcms-content",
  "version": "1.0.0",
  "description": "Хранилище тест кейсов для [TCMS](https://tcms.yurifedorov.com/)",
  "main": "index.js",
  "scripts": {
    "test": "cypress run",
    "test:chrome": "cross-env BROWSER=chrome npm run test",
    "test:edge": "cross-env BROWSER=edge npm run test",
    "test:firefox": "cross-env BROWSER=firefox npm run test"
  },
  "author": "",
  "license": "ISC",
  "cypress-cucumber-preprocessor": {
    "nonGlobalStepDefinitions": true,
    "stepDefinitions": [
      "tests/e2e/steps/**/*.ts"
    ],
    "messages": {
      "enabled": true,
      "output": "tests/reports/cucumber-messages.ndjson"
    },
    "json": {
      "enabled": true,
      "output": "tests/reports/cucumber-report.json"
    },
    "html": {
      "enabled": true,
      "output": "tests/reports/cucumber-report.html"
    }
  },
  "dependencies": {
    "@badeball/cypress-cucumber-preprocessor": "^21.0.2",
    "@bahmutov/cypress-esbuild-preprocessor": "^2.2.3",
    "@faker-js/faker": "^9.5.0",
    "@paralleldrive/cuid2": "^2.2.2",
    "@prisma/client": "^6.4.0",
    "@yurifyodorov/tcms-test-runner": "^0.1.25",
    "cypress": "^13.17.0",
    "onecolor": "^4.1.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "prisma": "^6.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  }
}
